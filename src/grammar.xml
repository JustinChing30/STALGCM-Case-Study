    <category name="Ng v. Nang">
        <rule id="verb_ng_adverb" name="turn 'ng' to 'nang' before adverb">
            <pattern>
                <token postag="VACF.*" postag_regexp="yes"/> <!-- postag_regexp="yes" means to treat postag as a regex -->
                <token min="0" postag="(PANP|PNGP|PSAP|PAND|PNGD|PSAD|PFOP|PINP|PCOP|PIDP|POTH).*" postag_regexp="yes"/> <!-- this is pronoun. min="0" makes it optional -->
                <token>ng</token>
                <token postag="AV.*" postag_regexp="yes"/>
            </pattern>
            <message>Use <suggestion>"nang"</suggestion> instead of "ng" before adverbs.</message>
            <short>Ng to Nang before adverbs</short>
            <example correction="nang mabagal" type="incorrect">Kumain <marker>ng mabagal</marker>.</example>
			<example type="correct">Kumain <marker>nang mabagal</marker>.</example>
        </rule>
    </category>

